<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:id="@+id/ly_dash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

       <ImageView
           android:id="@+id/img_4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/card_bg_balance"
           android:layout_centerHorizontal="true"
           />
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Current Balance"
            android:textSize="16dp"
            android:paddingLeft="52dp"
            android:layout_marginTop="42dp"
            />
        <TextView
            android:id="@+id/txt_3"
            android:layout_below="@id/txt_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Rp. 123.000"
            android:textSize="32dp"
            android:paddingLeft="52dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/txt_4"
            android:layout_below="@id/txt_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexmonosemibold"
            android:text="123 321 xxx xxx"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingLeft="52dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/txt_5"
            android:layout_below="@id/txt_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexmonomedium"
            android:text="05/2030"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:paddingLeft="52dp"
            android:layout_marginTop="12dp"
            />


    <LinearLayout
        android:id="@+id/ly_dash2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_dash"
        android:orientation="horizontal" />

        <ImageView
            android:id="@+id/img_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_4"
            android:src="@drawable/card_bg_ft"
            android:paddingLeft="40dp"
            />

        <TextView
            android:id="@+id/txt_card1"
            android:layout_below="@id/img_4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="15dp"
            android:text="Account Information"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/richBlack"
            android:fontFamily="@font/poppinssemibold"
            android:drawableBottom="@drawable/baseline_list_24"
            />


        <ImageView
            android:id="@+id/img_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_4"
            android:src="@drawable/card_bg_ft"
            android:paddingLeft="240dp"
            />

        <TextView
            android:id="@+id/txt_card2"
            android:layout_below="@id/img_4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="35dp"
            android:text="Transfer"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/richBlack"
            android:fontFamily="@font/poppinssemibold"
            android:drawableBottom="@drawable/baseline_currency_exchange_24"
            />

        <ImageView
            android:id="@+id/img_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_5"
            android:src="@drawable/card_bg_ft"
            android:paddingLeft="40dp"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/txt_card3"
            android:layout_below="@id/img_5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="60dp"
            android:text="Top Up E-Wallet"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/richBlack"
            android:fontFamily="@font/poppinssemibold"
            android:drawableBottom="@drawable/baseline_wallet_24"
            />

        <ImageView
            android:id="@+id/img_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_6"
            android:src="@drawable/card_bg_ft"
            android:paddingLeft="240dp"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/txt_card4"
            android:layout_below="@id/img_6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="70dp"
            android:text="Pay"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/richBlack"
            android:fontFamily="@font/poppinssemibold"
            android:drawableBottom="@drawable/baseline_payment_24"
            />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        app:menu="@menu/footbar" />

</RelativeLayout>